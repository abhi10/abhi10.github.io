---
import { siteConfig } from "../../config";
import BlogHeader from "../../components/BlogHeader.astro";
import { ideas, getStatusEmoji, getStatusLabel, getProgress } from "../../data/ideas";
import "../../styles/global.css";

const progress = getProgress();

// Group ideas by status for display order
const launchedIdeas = ideas.filter((i) => i.status === "launched");
const buildingIdeas = ideas.filter((i) => i.status === "building");
const ideaIdeas = ideas.filter((i) => i.status === "idea");
const parkedIdeas = ideas.filter((i) => i.status === "parked");

const sortedIdeas = [...launchedIdeas, ...buildingIdeas, ...ideaIdeas, ...parkedIdeas];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={`Ideas and projects by ${siteConfig.name}`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
    <title>Ideahamster - {siteConfig.name}</title>
  </head>
  <body class="bg-amber-50/30">
    <BlogHeader currentPath="/ideahamster" />

    <main class="max-w-5xl mx-auto px-6 sm:px-8 py-16 sm:py-20">
      <div class="mb-10">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-800 mb-2">
          Ideahamster <span class="text-3xl">ğŸ¹</span>
        </h1>
        <div
          class="w-20 h-1 rounded-full mb-6"
          style={`background-color: ${siteConfig.accentColor}`}
        >
        </div>
        <p class="text-lg text-gray-600 mb-4">
          Ideas I'm exploring, building, or have shipped.
        </p>
        <p class="text-sm text-gray-500">
          Progress: <span class="font-semibold text-gray-700">{progress.launched}/{progress.total}</span> launched
        </p>
      </div>

      <!-- Legend -->
      <div class="flex flex-wrap gap-4 mb-8 text-sm text-gray-600">
        <span>âœ… Launched</span>
        <span>ğŸ”¨ Building</span>
        <span>ğŸ’¡ Idea</span>
        <span>ğŸ—„ï¸ Parked</span>
      </div>

      <!-- Ideas Table -->
      <div class="bg-white rounded-xl border border-gray-100 overflow-hidden">
        <table class="w-full">
          <thead>
            <tr class="text-left text-xs font-semibold text-gray-500 uppercase tracking-wide bg-gray-50 border-b border-gray-100">
              <th class="px-4 py-3">Project</th>
              <th class="px-4 py-3 hidden sm:table-cell">Description</th>
              <th class="px-4 py-3 text-center w-36">Tags</th>
              <th class="px-4 py-3 text-center">Links</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-50">
            {sortedIdeas.map((idea) => (
              <tr class="hover:bg-amber-50/30 transition-colors">
                <td class="px-4 py-4">
                  <div class="flex items-center gap-2">
                    <span class="text-xl flex-shrink-0" title={getStatusLabel(idea.status)}>{getStatusEmoji(idea.status)}</span>
                    <span class="font-semibold text-gray-800">{idea.name}</span>
                  </div>
                  <p class="text-gray-500 text-sm mt-1 sm:hidden">{idea.summary}</p>
                </td>
                <td class="px-4 py-4 hidden sm:table-cell">
                  <p class="text-gray-600 text-sm">{idea.summary}</p>
                </td>
                <td class="px-4 py-4 text-center w-36">
                  <div class="flex flex-wrap gap-1 justify-center">
                    {idea.tags.map((tag) => (
                      <span class="px-2 py-0.5 rounded-full text-xs font-medium whitespace-nowrap" style={`background-color: ${siteConfig.accentColor}15; color: ${siteConfig.accentColor}`}>{tag}</span>
                    ))}
                  </div>
                </td>
                <td class="px-4 py-4">
                  <div class="flex items-center justify-center gap-2">
                    {idea.links?.github ? (
                      <a href={idea.links.github} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-700 transition-colors" title="GitHub">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                      </a>
                    ) : <span class="w-5 h-5"></span>}
                    {idea.links?.demo ? (
                      <a href={idea.links.demo} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-700 transition-colors" title="Demo">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" /></svg>
                      </a>
                    ) : <span class="w-5 h-5"></span>}
                    {idea.links?.website ? (
                      <a href={idea.links.website} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-700 transition-colors" title="Website">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" /></svg>
                      </a>
                    ) : <span class="w-5 h-5"></span>}
                    {idea.links?.blog ? (
                      <a href={idea.links.blog} class="text-gray-400 hover:text-gray-700 transition-colors" title="Blog">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>
                      </a>
                    ) : <span class="w-5 h-5"></span>}
                  </div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>

      <!-- CTA -->
      <div class="mt-12 p-6 bg-white rounded-xl border border-amber-100 text-center">
        <p class="text-gray-600 mb-2">
          Have feedback or want to collaborate on an idea?
        </p>
        <a
          href={siteConfig.social.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-amber-700 hover:text-amber-800 font-medium"
        >
          Let's connect on LinkedIn
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </a>
      </div>
    </main>

    <footer class="border-t border-amber-200/50 p-8 sm:p-10 mt-12 bg-white/50">
      <div class="max-w-3xl mx-auto text-center text-amber-700 text-sm">
        &copy; {new Date().getFullYear()}
        {siteConfig.name}. All rights reserved.
      </div>
    </footer>
  </body>
</html>
