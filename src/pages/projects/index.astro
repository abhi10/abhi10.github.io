---
import { siteConfig } from "../../config";
import { getCollection } from "astro:content";
import BlogHeader from "../../components/BlogHeader.astro";
import "../../styles/global.css";

// Get blog posts to link related content
const posts = await getCollection("blog", ({ data }) => !data.draft);

// Extended project data with additional fields
const projects = [
  {
    name: "Chitram (చిత్రం)",
    subtitle: "Full Stack Image Hosting with AI Vision",
    description: "A production-ready image hosting service with automatic AI vision tagging. Upload images, get smart tags instantly.",
    status: "V1 Launched!",
    github: "https://github.com/abhi10/chitram",
    deepwiki: "https://deepwiki.com/abhi10/chitram",
    demo: "https://chitram.io",
    skills: ["FastAPI", "PostgreSQL", "MinIO", "Supabase Auth", "HTMX", "Docker", "Caddy", "OpenAI Vision"],
    relatedPosts: ["fastapi-supabase-integration", "chitram-test-architecture"],
    highlights: [
      "OpenAI gpt-4o-mini for automatic image tagging",
      "Background processing via Celery + Redis ($0.004/image, ~10s latency)",
      "355 comprehensive tests",
      "Pluggable auth & AI provider patterns",
      "Graceful degradation when services unavailable",
    ],
  },
  {
    name: "Gremlin",
    subtitle: "AI-Powered Exploratory QA",
    description: "AI agent that surfaces 'what if?' risks before code ships. Combines 70+ curated risk patterns from real-world incidents with Claude's reasoning to find edge cases teams miss.",
    status: "V0 Launched!",
    github: "https://github.com/abhi10/gremlin",
    deepwiki: "",
    demo: "",
    skills: ["Python", "Claude API", "CLI", "Prompt Engineering"],
    relatedPosts: [],
    highlights: [
      "70+ curated patterns from production incidents",
      "Domain-aware risk analysis (payments, auth, data)",
      "Context-aware reasoning with Claude",
    ],
  },

];

// Helper to get post data by slug
function getPostBySlug(slug: string) {
  return posts.find(post => post.id === slug);
}

// Status badge colors
function getStatusColor(status: string) {
  switch (status) {
    case "Production": return "bg-green-100 text-green-800";
    case "In Progress": return "bg-amber-100 text-amber-800";
    case "In Development": return "bg-blue-100 text-blue-800";
    default: return "bg-gray-100 text-gray-800";
  }
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={`Open source projects by ${siteConfig.name}`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
    <title>Projects - {siteConfig.name}</title>
  </head>
  <body class="bg-amber-50/30">
    <BlogHeader currentPath="/projects" />

    <main class="max-w-4xl mx-auto px-6 sm:px-8 py-16 sm:py-20">
      <div class="mb-14">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-gray-800 mb-4">
          Projects
        </h1>
        <div
          class="w-20 h-1 rounded-full"
          style={`background-color: ${siteConfig.accentColor}`}
        >
        </div>
        <p class="mt-6 text-lg text-gray-600">
          Open source projects and tools I'm building.
        </p>
      </div>

      <div class="space-y-8">
        {projects.map((project) => (
          <article class="bg-white rounded-2xl border border-amber-100 overflow-hidden">
            {/* Header */}
            <div class="p-6 sm:p-8 border-b border-amber-50">
              <div class="flex flex-wrap items-start justify-between gap-4">
                <div>
                  <h2 class="text-2xl sm:text-3xl font-bold text-gray-800">
                    {project.name}
                  </h2>
                  <p class="text-lg text-gray-500 mt-1">{project.subtitle}</p>
                </div>
                <span class={`px-3 py-1 text-sm font-medium rounded-full ${getStatusColor(project.status)}`}>
                  {project.status}
                </span>
              </div>

              <p class="mt-4 text-gray-600 leading-relaxed">
                {project.description}
              </p>

              {/* Action buttons */}
              <div class="flex flex-wrap gap-3 mt-6">
                {project.github && (
                  <a
                    href={project.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-50 transition-colors"
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                    GitHub
                  </a>
                )}
                {project.deepwiki && (
                  <a
                    href={project.deepwiki}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 px-4 py-2 rounded-lg text-white transition-colors"
                    style={`background-color: ${siteConfig.accentColor}`}
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Ask AI about this codebase
                  </a>
                )}
                {project.demo && (
                  <a
                    href={project.demo}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-amber-300 text-amber-700 hover:bg-amber-50 transition-colors"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                    Live Demo
                  </a>
                )}
              </div>
            </div>

            {/* Details */}
            <div class="p-6 sm:p-8 bg-amber-50/30">
              {/* Tech stack */}
              <div class="mb-6">
                <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Tech Stack</h3>
                <div class="flex flex-wrap gap-2">
                  {project.skills.map((skill) => (
                    <span
                      class="px-3 py-1 rounded-full text-sm font-medium"
                      style={`background-color: ${siteConfig.accentColor}15; color: ${siteConfig.accentColor}`}
                    >
                      {skill}
                    </span>
                  ))}
                </div>
              </div>

              {/* Highlights */}
              {project.highlights && project.highlights.length > 0 && (
                <div class="mb-6">
                  <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Highlights</h3>
                  <ul class="space-y-2">
                    {project.highlights.map((highlight) => (
                      <li class="flex items-start gap-2 text-gray-600">
                        <svg class="w-5 h-5 text-amber-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        {highlight}
                      </li>
                    ))}
                  </ul>
                </div>
              )}

              {/* Related posts */}
              {project.relatedPosts && project.relatedPosts.length > 0 && (
                <div>
                  <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Related Posts</h3>
                  <div class="space-y-2">
                    {project.relatedPosts.map((slug) => {
                      const post = getPostBySlug(slug);
                      return post ? (
                        <a
                          href={`/blog/${slug}`}
                          class="flex items-center gap-2 text-gray-700 hover:text-amber-700 transition-colors"
                        >
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                          </svg>
                          {post.data.title}
                        </a>
                      ) : null;
                    })}
                  </div>
                </div>
              )}
            </div>
          </article>
        ))}
      </div>
    </main>

    <footer class="border-t border-amber-200/50 p-8 sm:p-10 mt-12 bg-white/50">
      <div class="max-w-4xl mx-auto text-center text-amber-700 text-sm">
        &copy; {new Date().getFullYear()}
        {siteConfig.name}. All rights reserved.
      </div>
    </footer>
  </body>
</html>
