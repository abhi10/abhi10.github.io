---
import { siteConfig } from "../config";
import "../styles/global.css";

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  tags?: string[];
}

const { title, description, pubDate, updatedDate, tags } = Astro.props;

function formatDate(date: Date): string {
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
    <title>{title} - {siteConfig.name}</title>
  </head>
  <body class="bg-amber-50/30">
    <header class="p-6 sm:p-8 border-b border-amber-200/50 bg-white/50">
      <nav class="max-w-3xl mx-auto flex items-center justify-between">
        <a
          href="/"
          class="text-amber-700 hover:text-amber-900 transition-colors flex items-center gap-2"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to home
        </a>
        <a
          href="/blog"
          class="text-amber-700 hover:text-amber-900 transition-colors"
        >
          All posts
        </a>
      </nav>
    </header>

    <main class="max-w-3xl mx-auto px-6 sm:px-8 py-16 sm:py-20">
      <article>
        <header class="mb-12 sm:mb-16">
          <div class="mb-6">
            <time
              datetime={pubDate.toISOString()}
              class="text-sm font-mono"
              style={`color: ${siteConfig.accentColor}`}
            >
              {formatDate(pubDate)}
            </time>
            {
              updatedDate && (
                <span class="text-sm text-amber-600 ml-4">
                  (Updated: {formatDate(updatedDate)})
                </span>
              )
            }
          </div>
          <h1
            class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-800 leading-tight"
          >
            {title}
          </h1>
          <p class="mt-6 text-lg sm:text-xl text-gray-600 leading-relaxed">
            {description}
          </p>
          {
            tags && tags.length > 0 && (
              <div class="flex flex-wrap gap-2 mt-8">
                {tags.map((tag) => (
                  <span
                    class="px-3 py-1.5 rounded-full text-sm font-medium"
                    style={`background-color: ${siteConfig.accentColor}20; color: ${siteConfig.accentColor}`}
                  >
                    {tag}
                  </span>
                ))}
              </div>
            )
          }
          <div
            class="w-24 h-1 rounded-full mt-10"
            style={`background-color: ${siteConfig.accentColor}`}
          >
          </div>
        </header>

        <div class="prose-content">
          <slot />
        </div>
      </article>
    </main>

    <footer class="border-t border-amber-200/50 p-8 sm:p-10 bg-white/50">
      <div class="max-w-3xl mx-auto text-center text-amber-700 text-sm">
        &copy; {new Date().getFullYear()}
        {siteConfig.name}. All rights reserved.
      </div>
    </footer>
  </body>
</html>

<style define:vars={{ accentColor: siteConfig.accentColor }}>
  .prose-content {
    font-size: 1.125rem;
    line-height: 1.9;
    color: #374151;
  }

  .prose-content :global(h2) {
    font-size: 1.75rem;
    font-weight: 700;
    color: #1f2937;
    margin-top: 3rem;
    margin-bottom: 1.25rem;
  }

  .prose-content :global(h3) {
    font-size: 1.375rem;
    font-weight: 600;
    color: #374151;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .prose-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .prose-content :global(ul),
  .prose-content :global(ol) {
    margin-left: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .prose-content :global(li) {
    margin-bottom: 0.75rem;
  }

  .prose-content :global(a) {
    color: var(--accentColor);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s;
  }

  .prose-content :global(a:hover) {
    border-bottom-color: var(--accentColor);
  }

  .prose-content :global(code) {
    background-color: #fef3c7;
    color: #92400e;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
  }

  .prose-content :global(pre) {
    background-color: #1f2937;
    color: #f3f4f6;
    padding: 1.5rem;
    border-radius: 0.75rem;
    overflow-x: auto;
    margin: 2rem 0;
  }

  .prose-content :global(pre code) {
    background-color: transparent;
    color: inherit;
    padding: 0;
  }

  .prose-content :global(blockquote) {
    border-left: 4px solid var(--accentColor);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #6b7280;
  }

  .prose-content :global(strong) {
    color: #1f2937;
    font-weight: 600;
  }

  .prose-content :global(hr) {
    border: none;
    border-top: 1px solid #fcd34d;
    margin: 3rem 0;
  }

  .prose-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    font-size: 0.95rem;
  }

  .prose-content :global(th),
  .prose-content :global(td) {
    border: 1px solid #e5e7eb;
    padding: 0.75rem 1rem;
    text-align: left;
  }

  .prose-content :global(th) {
    background-color: #fef3c7;
    font-weight: 600;
    color: #92400e;
  }

  .prose-content :global(tr:nth-child(even)) {
    background-color: #fffbeb;
  }

  .prose-content :global(tr:hover) {
    background-color: #fef3c7;
  }
</style>
