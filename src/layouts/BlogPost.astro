---
import { siteConfig } from "../config";
import BlogHeader from "../components/BlogHeader.astro";
import "../styles/global.css";

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  tags?: string[];
  linkedinPost?: string;
  githubRepo?: string;
}

const { title, description, pubDate, updatedDate, tags, linkedinPost, githubRepo } = Astro.props;

function formatDate(date: Date): string {
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}

const hasDiscussionLinks = linkedinPost || githubRepo;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <!-- Open Graph tags for social sharing -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="article" />
    <meta property="og:site_name" content={siteConfig.name} />
    <!-- Twitter Card tags -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
    <title>{title} - {siteConfig.name}</title>
  </head>
  <body class="bg-amber-50/30">
    <BlogHeader currentPath="/blog" />

    <main class="max-w-3xl mx-auto px-6 sm:px-8 py-16 sm:py-20">
      <article>
        <header class="mb-12 sm:mb-16">
          <div class="mb-6">
            <time
              datetime={pubDate.toISOString()}
              class="text-sm font-mono"
              style={`color: ${siteConfig.accentColor}`}
            >
              {formatDate(pubDate)}
            </time>
            {
              updatedDate && (
                <span class="text-sm text-amber-600 ml-4">
                  (Updated: {formatDate(updatedDate)})
                </span>
              )
            }
          </div>
          <h1
            class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-800 leading-tight"
          >
            {title}
          </h1>
          <p class="mt-6 text-lg sm:text-xl text-gray-600 leading-relaxed">
            {description}
          </p>
          {
            tags && tags.length > 0 && (
              <div class="flex flex-wrap gap-2 mt-8">
                {tags.map((tag) => (
                  <span
                    class="px-3 py-1.5 rounded-full text-sm font-medium"
                    style={`background-color: ${siteConfig.accentColor}20; color: ${siteConfig.accentColor}`}
                  >
                    {tag}
                  </span>
                ))}
              </div>
            )
          }
          <div
            class="w-24 h-1 rounded-full mt-10"
            style={`background-color: ${siteConfig.accentColor}`}
          >
          </div>
        </header>

        <div class="prose-content">
          <slot />
        </div>

        {/* Discussion CTA Section */}
        {hasDiscussionLinks && (
          <aside class="mt-16 pt-8 border-t border-amber-200">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">
              Continue the conversation
            </h3>
            <div class="flex flex-wrap gap-4">
              {linkedinPost && (
                <a
                  href={linkedinPost}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 px-4 py-2 rounded-lg text-white transition-colors"
                  style={`background-color: ${siteConfig.accentColor}`}
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                  Discuss on LinkedIn
                </a>
              )}
              {githubRepo && (
                <a
                  href={githubRepo}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-50 transition-colors"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  View on GitHub
                </a>
              )}
            </div>
          </aside>
        )}
      </article>
    </main>

    <footer class="border-t border-amber-200/50 p-8 sm:p-10 bg-white/50">
      <div class="max-w-3xl mx-auto text-center text-amber-700 text-sm">
        &copy; {new Date().getFullYear()}
        {siteConfig.name}. All rights reserved.
      </div>
    </footer>
  </body>
</html>

<style define:vars={{ accentColor: siteConfig.accentColor }}>
  .prose-content {
    font-size: 1.125rem;
    line-height: 1.9;
    color: #374151;
  }

  .prose-content :global(h2) {
    font-size: 1.75rem;
    font-weight: 700;
    color: #1f2937;
    margin-top: 3rem;
    margin-bottom: 1.25rem;
  }

  .prose-content :global(h3) {
    font-size: 1.375rem;
    font-weight: 600;
    color: #374151;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .prose-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .prose-content :global(ul),
  .prose-content :global(ol) {
    margin-left: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .prose-content :global(li) {
    margin-bottom: 0.75rem;
  }

  .prose-content :global(a) {
    color: var(--accentColor);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s;
  }

  .prose-content :global(a:hover) {
    border-bottom-color: var(--accentColor);
  }

  .prose-content :global(code) {
    background-color: #fef3c7;
    color: #92400e;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
  }

  .prose-content :global(pre) {
    background-color: #1f2937;
    color: #f3f4f6;
    padding: 1.5rem;
    border-radius: 0.75rem;
    overflow-x: auto;
    margin: 2rem 0;
  }

  .prose-content :global(pre code) {
    background-color: transparent;
    color: inherit;
    padding: 0;
  }

  .prose-content :global(blockquote) {
    border-left: 4px solid var(--accentColor);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #6b7280;
  }

  .prose-content :global(strong) {
    color: #1f2937;
    font-weight: 600;
  }

  .prose-content :global(hr) {
    border: none;
    border-top: 1px solid #fcd34d;
    margin: 3rem 0;
  }

  .prose-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    font-size: 0.95rem;
  }

  .prose-content :global(th),
  .prose-content :global(td) {
    border: 1px solid #e5e7eb;
    padding: 0.75rem 1rem;
    text-align: left;
  }

  .prose-content :global(th) {
    background-color: #fef3c7;
    font-weight: 600;
    color: #92400e;
  }

  .prose-content :global(tr:nth-child(even)) {
    background-color: #fffbeb;
  }

  .prose-content :global(tr:hover) {
    background-color: #fef3c7;
  }
</style>
